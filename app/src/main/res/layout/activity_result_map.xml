<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/result_map_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp">
        <Button
            android:id="@+id/result_map_route_car_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자동차 길 찾기"/>
        <Button
            android:id="@+id/result_map_route_pblc_trans_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대중교통 길 찾기"
            />
        <Button
            android:id="@+id/result_map_route_foot_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도보길 찾기"
            />

    </LinearLayout>


</RelativeLayout>