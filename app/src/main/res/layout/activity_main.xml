<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
   >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Map_layout"
        android:background="@color/colorWhite">

    </FrameLayout>
    <FrameLayout
        android:id="@+id/edit_text_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_toRightOf="@+id/search_button"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="30dp"
        >
        <EditText
            android:id="@+id/radius_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="반경을 m 단위로 입력"
            android:inputType="number"
            ></EditText>

    </FrameLayout>

    <Button
        android:id="@+id/radius_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제출"
        android:layout_toRightOf="@+id/edit_text_frame"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        >
    </Button>
    <ImageButton
        android:id="@+id/myLocationButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/horizontal_long_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/mylocation"
        android:scaleType="centerCrop"
        >
    </ImageButton>
    <ImageButton
        android:id="@+id/search_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/horizontal_long_button"
        android:src="@drawable/finder_left"
        android:scaleType="centerCrop"
        >

    </ImageButton>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-200dp"
        android:id="@+id/Search_Frame"
        android:background="@color/ThemeColor"
        >


    </FrameLayout>




</RelativeLayout>